<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}}</title>
  <!-- Si tienes estilos, enlázalos -->
  <link rel="stylesheet" href="../public/style.css">
</head>
<body>
  <h1>{{title}}</h1>

  <!-- Formulario para agregar productos -->
  <form id="productForm">
    <input type="text" id="title" placeholder="Nombre del producto" required>
    <input type="number" id="price" placeholder="Precio" required>
    <button type="submit">Agregar Producto</button>
  </form>

  <!-- Formulario de filtros, paginación y ordenamiento -->
  <form id="filterForm">
    <label for="filterCategory">Categoría:</label>
    <input type="text" id="filterCategory" placeholder="Categoría">
    
    <label for="filterPriceRange">Rango de Precio (min-max):</label>
    <input type="text" id="filterPriceRange" placeholder="50-150">
    
    <label for="filterSort">Ordenar por:</label>
    <select id="filterSort">
      <option value="">Sin ordenar</option>
      <option value="price:asc">Precio ascendente</option>
      <option value="price:desc">Precio descendente</option>
    </select>
    
    <label for="filterPage">Página:</label>
    <input type="number" id="filterPage" value="1">
    
    <label for="filterLimit">Límite:</label>
    <input type="number" id="filterLimit" value="10">
    
    <button type="submit">Aplicar filtros</button>
  </form>

  <!-- Contenedor para la lista de productos -->
  <ul id="productList">
    {{#each products}}
      <li id="product-{{this.id}}">
        {{this.title}} - ${{this.price}} 
        <button onclick="deleteProduct('{{this.id}}')">❌</button>
      </li>
    {{/each}}
  </ul>

  <!-- Contenedor para mostrar el carrito (si decides implementarlo en la vista) -->
  <div id="cart-view"></div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="../public/main.js"></script>
</body>
</html>